@page "{restaurantId:int}"
@model ASP.NET_Core_Fundamentals.Pages.Restaurants.EditModel
@{
    ViewData["Title"] = "Edit";
}



<h3>Editing @Model.Restaurant.Name</h3>

<form method="post">

    <input type="hidden" name="" asp-for="Restaurant.Id" />
    <div class="form-group">
        <label asp-for="Restaurant.Name"></label>
        <input asp-for="Restaurant.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Location"></label>
        <input asp-for="Restaurant.Location" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Cusine"></label>
        <select class="form-control" asp-for="Restaurant.Cusine"
                asp-items="Model.Cuisines">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>